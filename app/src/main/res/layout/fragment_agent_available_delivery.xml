<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_agent_available_delivery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".agent.AgentAvailableDeliveryFragment">

    <TextView
        android:id="@+id/tv_availableDeliveries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Available Deliveries"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/bg2"
        android:visibility="visible"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/availableDeliveryRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_noDeliveries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="No available deliveries at the moment."
        android:textSize="20sp"
        android:textColor="@color/bg2"
        android:visibility="gone"/>

</LinearLayout>