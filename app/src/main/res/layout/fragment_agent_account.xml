<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".agent.AgentAccountFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="My Account"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/bg2"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agent Name"
                android:textSize="23sp"
                android:textStyle="bold"
                android:textColor="@color/bg2"/>

            <EditText
                android:id="@+id/etAgentName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:hint="Name"
                android:inputType="text"
                android:drawableRight="@drawable/edit"
                android:drawableTint="@color/bg2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agent Phone Number"
                android:textSize="23sp"
                android:textStyle="bold"
                android:textColor="@color/bg2"/>

            <EditText
                android:id="@+id/etAgentPhone"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:hint="Phone Number"
                android:inputType="phone"
                android:drawableRight="@drawable/edit"
                android:drawableTint="@color/bg2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vehicle Type"
                android:textSize="23sp"
                android:textStyle="bold"
                android:textColor="@color/bg2"/>

            <Spinner
                android:id="@+id/spinVehicleType"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vehicle Registration Number"
                android:textSize="23sp"
                android:textStyle="bold"
                android:textColor="@color/bg2"/>

            <EditText
                android:id="@+id/etAgentVehicleReg"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:hint="Vehicle Registration"
                android:inputType="text"
                android:drawableRight="@drawable/edit"
                android:drawableTint="@color/bg2"/>

            <Button
                android:id="@+id/btnSaveChanges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Save Changes"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/bg2"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>