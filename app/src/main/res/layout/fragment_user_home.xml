<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragmentUserHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    tools:context=".user.UserHomeFragment">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_gravity="top"
        android:gravity="center"
        android:text="USER NAME"
        android:textSize="23sp"
        android:textColor="@color/bg"/>

    <GridLayout
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:alignmentMode="alignMargins"
        android:layout_gravity="center"
        android:padding="10dp"
        android:rowCount="2"
        android:columnCount="2">

        <androidx.cardview.widget.CardView
            android:layout_width="10dp"
            android:layout_height="180dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="16dp"
            android:elevation="5dp"
            android:backgroundTint="@color/bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageButton
                    android:id="@+id/ib_myacnt"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/account"
                    android:backgroundTint="@color/white"/>

                <TextView
                    android:id="@+id/tv_myacnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="My Account"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="10dp"
            android:layout_height="180dp"
            android:layout_margin="8dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            app:cardCornerRadius="16dp"
            android:elevation="5dp"
            android:backgroundTint="@color/bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageButton
                    android:id="@+id/ib_newdelv"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/newdelivery"
                    android:backgroundTint="@color/white"/>

                <TextView
                    android:id="@+id/tv_newdelv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="New Delivery"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="10dp"
            android:layout_height="180dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="16dp"
            android:elevation="5dp"
            android:backgroundTint="@color/bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp">

                <ImageButton
                    android:id="@+id/ib_delvhist"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/history"
                    android:backgroundTint="@color/white"/>

                <TextView
                    android:id="@+id/tv_delvhist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Delivery History"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="10dp"
            android:layout_height="180dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="16dp"
            android:elevation="5dp"
            android:backgroundTint="@color/bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp">

                <ImageButton
                    android:id="@+id/ib_support"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/contactsupport"
                    android:backgroundTint="@color/white"/>
                <TextView
                    android:id="@+id/tv_support"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Support"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </GridLayout>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Logout"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/bg"/>

</LinearLayout>