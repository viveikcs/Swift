<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activityAgentRegister"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    tools:context=".agent.AgentRegisterActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:src="@drawable/swift_logo_svg"
        app:tint="@color/bg2"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:backgroundTint="@color/bg2"
        app:cardCornerRadius="16dp"
        android:elevation="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:textAlignment="center"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:paddingBottom="10dp"/>

                <EditText
                    android:id="@+id/etRegName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:inputType="text"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:hint="Name"
                    android:textColorHint="@color/white"
                    android:padding="8dp"
                    android:drawableLeft="@drawable/username"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/white"/>

                <EditText
                    android:id="@+id/etRegEmail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:hint="Email"
                    android:textColorHint="@color/white"
                    android:padding="8dp"
                    android:drawableLeft="@drawable/email"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/white"/>

                <EditText
                    android:id="@+id/etRegPass"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:hint="Password"
                    android:textColorHint="@color/white"
                    android:padding="8dp"
                    android:drawableLeft="@drawable/password"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/white"/>

                <EditText
                    android:id="@+id/etRegMobile"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:inputType="phone"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:hint="Mobile Number"
                    android:textColorHint="@color/white"
                    android:padding="8dp"
                    android:drawableLeft="@drawable/mobile"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/white"/>

                <EditText
                    android:id="@+id/etRegResidentID"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:inputType="text"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:hint="Resident ID Number"
                    android:textColorHint="@color/white"
                    android:padding="8dp"
                    android:drawableLeft="@drawable/id_card"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/white"/>

                <Spinner
                    android:id="@+id/spinVehicleType"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/text"
                    android:paddingLeft="33dp"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>

                <EditText
                    android:id="@+id/etRegVehicleRegistration"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/car"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/white"
                    android:ems="10"
                    android:hint="Vehicle Registration Number"
                    android:textColorHint="@color/white"
                    android:inputType="text"
                    android:padding="8dp"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>

                <CheckBox
                    android:id="@+id/chkbxAgentConsent"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:buttonTint="@color/white"
                    android:clickable="true"
                    android:text="Accept Terms and Conditions"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:padding="5dp"/>

                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/bg2"
                    android:text="Register"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</LinearLayout>