<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activityAdminLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".admin.AdminLoginActivity">

    <ImageButton
        android:id="@+id/imgBtn_BackNavAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_back"
        android:backgroundTint="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/logo_user"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:src="@drawable/swift_logo"/>

        <EditText
            android:id="@+id/etLogEmail_admin"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingTop="20dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textSize="18sp"
            android:hint="Email Address"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="10dp" />

        <EditText
            android:id="@+id/etLogPassword_admin"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btnLogin_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/black"
            android:text="Login"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/white"/>

    </LinearLayout>



</LinearLayout>