<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    tools:context=".agent.AgentDeliveryNavigationFragment">

    <TextView
        android:id="@+id/tv_deliveryId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textSize="23sp"
        android:hint="Delivery Number"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@color/bg2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="8dp"
        android:text="User Details"
        android:textSize="20sp"
        android:textColor="@color/bg2"/>

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:hint="Name:"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/account"
        android:drawableTint="@color/bg2"
        android:drawablePadding="4dp"/>

    <TextView
        android:id="@+id/tv_usermobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobile Number:"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/mobile"
        android:drawableTint="@color/bg2"
        android:drawablePadding="4dp"/>

    <ImageButton
        android:id="@+id/imgBtn_AgentChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/chat"
        app:tint="@color/bg2"
        android:backgroundTint="@color/white"
        android:contentDescription="Live Chat with Delivery Agent"/>
    <TextView
        android:id="@+id/tv_ChatWithAgent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15dp"
        android:layout_gravity="center"
        android:text="Chat with User"
        android:textSize="15sp"
        android:textColor="@color/bg2"/>

    <Button
        android:id="@+id/btn_startNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Start Navigation"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/bg2"
        android:visibility="visible"/>

    <com.ncorti.slidetoact.SlideToActView
        android:id="@+id/slideToAct_PickedUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:text="Confirm Pickup"
        app:text_size="23sp"
        app:text_style="bold"
        app:text_color="@color/white"
        app:slider_icon="@drawable/twowheeler"
        app:slider_icon_color="@color/bg"
        app:complete_icon="@drawable/newdelivery"
        app:inner_color="@color/white"
        app:outer_color="@color/bg2"
        android:visibility="gone"/>

    <com.ncorti.slidetoact.SlideToActView
        android:id="@+id/slideToAct_Delivered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:text="Confirm Delivery"
        app:text_size="23sp"
        app:text_style="bold"
        app:text_color="@color/white"
        app:slider_icon="@drawable/twowheeler"
        app:slider_icon_color="@color/bg"
        app:complete_icon="@drawable/newdelivery"
        app:inner_color="@color/white"
        app:outer_color="@color/bg2"
        android:visibility="gone"/>



</LinearLayout>